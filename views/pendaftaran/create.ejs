<%- include('../partials/_head.ejs') %>
<%- include('../partials/_navbar.ejs') %>

<div class="container">
    <form action="/pendaftaran/store" method="POST" enctype="multipart/form-data" class="form">
        <div class="form-group">
            <label for="foto" class="form-label">Foto KK</label>
            <input type="file" class="form-control" id="foto" name="foto" required>
        </div>
        <div class="form-group">
            <label for="nama_jamaah" class="form-label">Nama Jamaah</label>
            <input type="text" class="form-control" id="nama_jamaah" name="nama_jamaah" required>
        </div>
        <div class="form-group">
            <label for="nik" class="form-label">NIK</label>
            <input type="text" class="form-control" id="nik" name="nik" required>
        </div>
        <div class="form-group">
            <label for="alamat" class="form-label">Alamat</label>
            <input type="text" class="form-control" id="alamat" name="alamat" required>
        </div>
        <div class="form-group">
            <label for="id_pilihan" class="form-label">Pilihan</label>
            <select class="form-select" id="id_pilihan" aria-label="Pilih Tingkat Keahlian" name="id_pilihan" required>
                <option selected disabled>Pilih Pilihan</option>
                <% for(var i=0; i < data.length; i++){ %>
                    <option value="<%= data[i].id_pilihan %>"><%= data[i].nama_pilihan %></option>
                <% } %>
            </select>
            <div class="invalid-feedback">Mohon pilih pilihan.</div>
        </div>
        <div class="form-group">
            <label for="paspor" class="form-label">Paspor</label>
            <select class="form-select" id="paspor" aria-label="Pilih Paspor" name="paspor" required>
                <option selected disabled>Pilih</option>
                <option value="Ada">ADA</option>
                <option value="Tidak Ada">TIDAK ADA</option>
                <!-- Tambahkan opsi lain sesuai dengan nilai-nilai enum -->
            </select>
            <div class="invalid-feedback">Mohon pilih status paspor.</div>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary btn-block">Simpan</button>
        </div>
    </form>
</div>

<%- include('../partials/_foot.ejs') %>